<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TableLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|center_horizontal"
        android:padding="30dp"
        android:baselineAligned="false"
        android:touchscreenBlocksFocus="false"
        android:textAlignment="center">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <ImageView android:id="@+id/livemaps"
                android:layout_column="0"
                android:src="@drawable/live_map"
                android:layout_width="99dp"
                android:layout_height="99dp"
                android:paddingTop="10dp"
                android:paddingBottom="3dp" />

            <ImageView android:id="@+id/kml"
                android:layout_column="1"
                android:src="@drawable/kml"
                android:layout_width="99dp"
                android:layout_height="99dp"
                android:paddingTop="10dp"
                android:paddingBottom="3dp" />

            <ImageView android:id="@+id/gpx"
                android:layout_column="2"
                android:src="@drawable/gpx"
                android:layout_width="99dp"
                android:layout_height="99dp"
                android:paddingTop="10dp"
                android:paddingBottom="3dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <TextView
                android:text="Live Map"
                android:id="@+id/textView23"
                android:layout_column="0"
                android:layout_width="99dp"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:gravity="center" />

            <TextView
                android:text="Download \nKML files"
                android:id="@+id/textView24"
                android:layout_column="1"
                android:layout_width="99dp"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:gravity="center" />

            <TextView
                android:text="Download \nGPX files"
                android:id="@+id/textView25"
                android:layout_column="2"
                android:layout_width="99dp"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:gravity="center" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:text="KML files and GPX files are best downloaded on a computer device. \n\nDirect Download Links: \nGPX Maps: goo.gl/ZKiEMe \nKML Maps: goo.gl/XWu6yy"
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:gravity="center"
                android:layout_column="0"
                android:layout_span="3"
                android:autoLink="web"
                android:textIsSelectable="true"/>
        </TableRow>
    </TableLayout>
    </RelativeLayout>
